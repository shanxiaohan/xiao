/* pages/daily/addcard/addcard.wxss */
.addcard-container {
  background-color: #f2f2f2;
}
.input-wrap {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
}
.input-wrap input {
  height: 100%;
  width: 550rpx;
  margin-left: 20px;
  font-size: 30rpx;
    /* background-color: #bfbfbf;   */
}
.input-img {
  height: 60rpx;
  width: 60rpx;
  margin: 10px -10px auto 10px;
}
.input-confirm {
  height: 60rpx;
  width: 60rpx;
  margin: auto 0 auto 10rpx;
}
.icon-wrap {
  width: 90%;
  height: 1300rpx;
  overflow: auto;
  margin: 0 auto;
  margin-top: 10rpx;
}
.icon-img {
  width: 120rpx;
  height: 120rpx; 
  float: left;
  margin: 5px 5px 5px 15px;
}