.card-container {
  background-color: #5d5465;
  height: 100px;
  width: 90%;
  display: flex;
  flex-direction: row;
  border-radius: 30rpx;
  margin: 15px auto;
  align-items: center;
}
.check-icon {
  flex: 1;
  padding-left: 30rpx;
}
.check-icon image{
  width: 50px;
  height: 50px;
  /* margin-top: 30%; */
}
.content {
  flex: 2;
  color: #fff;
  /* text-align: center; */
  /* padding-top: 25px; */
}
.content-text {
  font-size: 1.5em;
  font-weight: bolder;
}
.last-days {
  display: block;
  font-size: 0.8em;
  /* font-weight: bold; */
}
.content-icon {
  flex: 1;
  padding-right: 30rpx;
}
.content-icon image{
  width: 50px;
  height: 50px;
  float: right;
}